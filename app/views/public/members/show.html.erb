<div class="col-md-10 offset-md-1 ">
<div class="page-title">
<h2>マイページ</h2>
</div>
<h3>登録情報　<%= link_to "編集する", members_edit_path, class: "btn btn-success" %></h3>
<table class="table table-bordered mt-3 ">
  <thead>
    <tr>
      <th>氏名</th>
      <th><%= @member.last_name %> <%= @member.first_name %></th>
    </tr>
    <tr>
      <th>カナ</th>
      <th><%= @member.kana_last_name %> <%= @member.kana_first_name %></th>
    </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= @member.postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= @member.address %></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= @member.phone_number %></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= @member.email %></th>
    </tr>
  </thead>
</table>


<h3 class="mt-3">配送先　　<%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></h3>
<h3 class="mt-3">注文履歴　<%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></h3>
</div>

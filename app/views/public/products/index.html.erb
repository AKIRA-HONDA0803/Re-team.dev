<div class="product-body">
 <div class="products-cintainer">
  <div class="row">
   <div class="col-10 offset-lg-1 ">
    <div class="page-title">
     <h2>商品一覧<h4>(全<%=@allproducts.count %>件)</h4></h2>
    </div>
    <div class="d-flex flex-wrap">
     <% @products.each do |product| %>
      <div class="card mr-2 mb-2">
       <div class="card-img-top">
        <%= link_to product_path(product) do %>
        <%= attachment_image_tag product, :image,:fill, 280, 180, format: 'jpeg',class:"card-img-top" %>
        <% end %>
       </div>
      <div class="card-body col-lg-8">
       <strong><%= product.name %></strong><br>
       <strong>￥<%= (product.price*1.1).round.to_s(:delimited, delimiter: ',') %></strong><br>
      </div>
      </div>
     <% end %>
    </div>
     <%= paginate @products %>
   </div>
  </div>
 </div>
</div>

<div class="product-body">
 <div class="products-cintainer">
  <div class="row">
   <div class="col-10 offset-lg-2 ">
    <h1>商品一覧<h4>(全<%=@allproducts.count %>件)</h4></h1>
     <div class="d-flex flex-wrap">
      <% @products.each do |product| %>
      <div class="card mr-2 mb-2">
       <div class="card-img-top">
        <%= link_to product_path(product) do %>
        <%= attachment_image_tag product, :image,:fill, 280, 180, format: 'jpeg',class:"card-img-top" %>
        <% end %>
       </div>
       <div class="card-body col-lg-8">
        <%= product.name %><br>
        ￥<%= (product.price*1.1).round.to_s(:delimited, delimiter: ',') %><br>
        <% if product.product_status == true %>
           販売中
        <% else %>
           販売停止中
        <% end %>
        </div>
     </div>
<% end %>
</div>
<%= paginate @products %>
</div>
</div>
</div>
</div>
 </div>
</div>
<h1>商品一覧</h1>

<% @products.each do |product| %>
    <div class="card">
    <%= attachment_image_tag product, :image, :fill, 60, 60 %>
    <%= link_to product.name,product_path(product)  %>
    <%= product.price.to_s(:delimited, delimiter: ',') %>円
     <% if product.product_status == true %>
          販売中
          <% else %>
          販売停止中

 <% end %>
<% end %>
</div>



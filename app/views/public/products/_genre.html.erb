<table class="table table-borderless genre_box">
  <thead class="borderless">
    <tr>
      <th class="text-center ribbon"><p>ジャンル検索</p></th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td class="genre_content p-0">
          <p>
            <%= link_to products_path(select_genre: genre.id), class:'text-dark font-weight-bold' do %>
              <%= genre.name %>
            <% end %>
          </p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
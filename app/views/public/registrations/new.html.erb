  <div class="field">
    <%= f.label :（性） %>
    <%= f.email_field :last_name, autofocus: true, autocomplete: "family-name" %>
  </div>
  
  <div class="field">
    <%= f.label :（名） %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

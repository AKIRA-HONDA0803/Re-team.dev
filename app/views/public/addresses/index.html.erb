<div class="page-title">
<h2>配送先登録/一覧</h2>
</div>
  <%= form_with model: @address, local: true do |f| %>
    <label>郵便番号</label>
    <%= f.text_field :postal_code %>
    <label>住所</label>
    <%= f.text_field :address %>
　       <lavel>宛名</lavel>
    <%= f.text_field :name %>
    <%= f.submit "新規登録", class: "btn btn-success" %>
  <% end %>
  <div class="container">
  <div class="row">
    <table class="table table-borderd">
      <therd>
        <tr class="thead-light">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
        </tr>
      </therd>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address), class: "btn btn-outline-success" %>
          </td>
          <td>
            <%= link_to "削除する", address_path(address), data: { confirm: '本当に消しますか？' }, method: :delete, class: "btn btn-outline-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>

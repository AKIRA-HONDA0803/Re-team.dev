<h1>商品一覧</h1>
<table class="table">
<thead>
<tr>
    <th>商品id</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
</tr>
</thead>

 <tbody>
<% @products.each do |product| %>
 <tr>
     <td><%= product.id %></td>
     <td><%= link_to product.name,admin_product_path(product)  %></td>
     <td><%= product.price.to_s(:delimited, delimiter: ',') %>円</td>
     <td><%= product.genre.name %></td>
     <td><% if product.product_status == true %>
          販売中
          <% else %>
          販売停止中
         </td>
 </tr>

 </tbody>
 </table>
 <% end %>
<% end %>

<br>
<%= link_to "新規登録" ,new_admin_product_path %>

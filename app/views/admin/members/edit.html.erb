<h2><%= @member.last_name %><%= @member.first_name %>さんの会員詳細編集</h2>
    <%= form_with model: [:admin, @member], local: true do |f| %>
    <table class="table">
    <tr><th>会員ID</th><th><%= @member.id %></th></tr>
      <div class="form-group">
        <tr>
          <th>氏名</th>
          <th><%= f.text_field :last_name %></th>
          <th><%= f.text_field :first_name %></th>
        </tr>
      </div>
      <div class="form-group">
        <tr>
          <th>フリガナ</th>
          <th><%= f.text_field :kana_last_name %></th>
          <th><%= f.text_field :kana_first_name %></th>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <th>郵便番号</th>
          <th><%= f.text_field :postal_code %></th>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <th>住所</th>
          <th><%= f.text_field :address %></th>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <th>電話番号</th>
          <th><%= f.text_field :phone_number %></th>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <th>メールアドレス</th>
          <th><%= f.text_field :email %></th>
        </tr>
      </div>

      <div class="form-group">
        <tr>
          <th>会員ステータス</th>
          <th>
            <div class="field">
              <%= f.radio_button :is_deleted, 'false' %>
              <%= f.label :有効 %>
             <%= f.radio_button :is_deleted, 'true' %>
              <%= f.label :退会 %>
            </div>
          </th>
        </tr>
      </div>
  </table>
    <div class="form-group">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
</div>
</div>


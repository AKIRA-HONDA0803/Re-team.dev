<div class="container mb-5">
  <div class="row mt-5">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <h1><%= @member.last_name %><%= @member.first_name %>さんの会員詳細</h1>
      <table class="table">
        <tr><th>会員ID</th><th><%= @member.id %></th></tr>
        <tr><th>氏名</th><th><%= @member.last_name %><%= @member.first_name %></th></tr>
        <tr><th>フリガナ</th><th><%= @member.kana_last_name %><%= @member.kana_first_name %></th></tr>
        <tr><th>郵便番号</th><th><%= @member.postal_code %></th></tr>
        <tr><th>住所</th><th><%= @member.address %></th></tr>
        <tr><th>電話番号</th><th><%= @member.phone_number %></th></tr>
        <tr><th>メールアドレス</th><th><%= @member.email %></th></tr>
        <tr><th>会員ステータス</th>
        <div>
          <% if @member.is_deleted == true%>
          <td class="text-secondary">退会</td>
          <% else %>
          <td class="text-success">有効</td>
          <% end %>
        </div>
        </tr>
      </table>
       <%= link_to "編集する", edit_admin_member_path(@member), class: "btn btn-sm btn-success" %>
       &emsp;&emsp;<%= link_to "注文履歴一覧画面を見る", admin_root_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
</div>

<table class="table table-hover table-inverse">
<p>購入者</p>
  <%= link_to admin_member_path(@order.member_id) do %>
     <%= @order.member.first_name %> <%= @order.member.last_name %>
  <% end %>
  <tr>
     <th>注文日</th>
     <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
     <th>配送先</th>
     <td>〒<%= @order.postal_code.to_s %> <%= @order.address %></td>
  </tr>

     <p>支払い方法</p>
     <p><%= @order.payment_method %></p>
  </div>

  <div class="row">
     <p>注文ステータス</p>
     <div>
        <%= form_with model: @order, url:admin_order_path(@order.id), method: :patch, local: true do | f | %>
           <%= f.select :order_status,["入金待ち","入金確認","発送準備中","発送済み"] %>
           <%= f.submit '更新',class: "btn btn-outline-success" %>
        <% end %>
     </div>
  </div>
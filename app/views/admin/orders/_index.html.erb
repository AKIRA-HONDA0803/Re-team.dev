<table class="table table-hover table-inverse">
  <thead class="thead-light">
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_products.each do |order_product| %>
    <tr>
        <td><%= order_product.product.name %></td>
        <td><%= order_product.price.to_s(:delimited, delimiter: ',') %></td>
        <td><%= order_product :quantity %></td>
        <td><%= (order_product.price*1.1).round.to_s(:delimited, delimiter: ',') %>
            <% @sum += (order_product.product.price*1.1).round %></td>
        <td>
          <%= form_with model: @order, url:admin_order_path(@order.id), method: :patch, local: true do | f | %>
            <%= f.select :making_status,["製作不可","製作待ち","製作中","製作完了"] %>
            <%= f.submit '更新',class:"btn btn-outline-success" %>
            <% end %>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>

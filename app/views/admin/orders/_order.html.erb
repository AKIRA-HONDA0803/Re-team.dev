<table class="table">
  <tbody>
    <tr>
      <td>購入者</td>
      <td>
        <%= link_to admin_member_path(@order.member_id) do %>
           <%= @order.member.last_name %> <%= @order.member.first_name %>
        <% end %>
      </td>
    </tr>
    <tr>
       <td>注文日</td>
       <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
       <td>配送先</td>
       <td>〒<%= @order.postal_code.to_s %> <%= @order.address %></td>
    </tr>
    <tr>
      <td><p>支払い方法</p></td>
      <td><p><%= @order.payment_method %></p></td>
    </tr>
    <tr>
      <td><p>注文ステータス</p></td>
      <td>
        <%= form_with model: @order, url:admin_order_path(@order.id), method: :patch, local: true do | f | %>
            <%= f.select :order_status,["入金待ち","入金確認","製作中","発送準備中","発送済み"],checked: true %>
            <%= f.submit '更新',class: "btn btn-outline-success" %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
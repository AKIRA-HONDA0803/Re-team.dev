<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-5 mb-3">ジャンル追加</h2>
      <%= form_with model:@genre, url:'/admin/genres', local:true do |f| %>
         <%= f.label :ジャンル名　 %>
         <%= f.text_field :name %>
         <%= f.submit '新規登録', class: "btn btn-primary" %>
      <% end %>

      <h2 class="mt-5 mb-3">ジャンル一覧</h2>
    　<table>
        <tbody>
          <% @genres.each do |genre| %>
                <tr>
                   <td>・<%= genre.name %>&emsp;</td>
                   <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
                </tr>
          <% end %>
        </tbody>
    　</table>
    </div>
  </div>
</div>

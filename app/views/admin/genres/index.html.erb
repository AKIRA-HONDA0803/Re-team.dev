<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
<h1 class="mt-5 mb-3">ジャンル一覧・追加</h1>
<%= form_with model:@genre, url:'/admin/genres', local:true do |f| %>
   <%= f.label :ジャンル %>
   <%= f.text_field :name %>
   <%= f.submit '新規登録' %>
<% end %>

<h3 class="mt-5 mb-3">ジャンル</h3>
<% @genres.each do |genre| %>
<table>
   <tbody>
      <tr>
         <td><%= genre.name %></td>
         <td><%= link_to "編集する", edit_admin_genre_path(genre)%></td>
      </tr>
   </tbody>
</table>
<% end %>
      </div>
    </div>
  </div>
</div>

<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
        <h2>注文履歴一覧</h2>
        <table class="table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.created_at %></td>
                <td><%= order.member.last_name %> <%= order.member.first_name %></td>
                <td><%= order.order_product.count %></td>
                <td><%= order.order_status %></td>
              </tr>
            <% end %>
            <%= paginate @orders %>
          </tbody>
      </div>
    </div>
  </div>
</main>
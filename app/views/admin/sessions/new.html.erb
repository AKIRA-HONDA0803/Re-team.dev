<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
        <h2 class="mt-5 mb-3">管理者ログイン</h2>
        <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
          <div class="field">
            <%= f.label :メールアドレス %>&emsp;&emsp;
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %>&emsp;&emsp;&emsp;&emsp;
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <!--<% if devise_mapping.rememberable? %>-->
          <!--  <div class="field">-->
          <!--    <%= f.check_box :remember_me %>-->
          <!--    <%= f.label :remember_me %>-->
          <!--  </div>-->
          <!--<% end %>-->

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>

        <!--<%= render "admin/shared/links" %>-->
      </div>
    </div>
  </div>
</main>